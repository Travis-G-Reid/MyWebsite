@model MyWebApp.Models.RegisterModel
@{
    ViewData["Title"] = "Registration";
}
<html>

<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/register.css" />
</head>

<body>
    <div style="margin-top: 5em;">
        <a style="font-size: 2.5em !important;" class="navigation-link" href="/Index">Home</a>
	    <p style="font-size: 2.5em; color: white;"> Register here! </p>
        <p style="font-size: 1.5em; color: gray;">[ Work in progress ]</p>
    </div>

    <div class="registration-container" style="background-color:rgba(20, 20, 20, 0.99); padding-top: 0.75em;">

	    <form method="post" asp-controller="Register" asp-action="Register">
            <div>
                <label for="username" class="form-class">Username:</label>
                <input type="text" id="username" name="Username" required>
            </div>
            <br />
            <div>
                <label for="password" class="form-class">Password:</label>
                <input type="password" id="password" name="Password" required>
            </div>
            <br />
            <div>
                <label for="email" class="form-class">Email:</label>
                <input type="email" id="email" name="Email" required>
            </div>
            <br />
            <input class="register-button" type="submit" value="Submit">
        </form>
    </div>
</body>

</html>
